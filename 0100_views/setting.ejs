<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>설정</title>
  <link rel="stylesheet" href="/css/3000.css" />
  <style>
    .radio-group {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
      margin-top: 5px;
    }
    .radio-group label {
      white-space: nowrap;
    }
    .setting-section {
      background-color: #e0e0e0;
      padding: 12px;
      border-radius: 8px;
      margin-top: 15px;
    }
    .setting-section label:first-child {
      font-weight: bold;
      display: block;
      margin-bottom: 4px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>⚙️ 설정</h2>

    <!-- 배경 설정 -->
    <div class="setting-section">
      <label>배경 설정</label>
      <div class="radio-group">
        <label><input type="radio" name="theme" value="light"> 라이트모드</label>
        <label><input type="radio" name="theme" value="dark"> 다크모드</label>
      </div>
    </div>

    <!-- 배열 수 -->
    <div class="setting-section">
      <label>배열 수</label>
      <div class="radio-group">
        <label><input type="radio" name="columnCount" value="1"> 1열</label>
        <label><input type="radio" name="columnCount" value="2"> 2열</label>
        <label><input type="radio" name="columnCount" value="3"> 3열</label>
      </div>
    </div>

    <!-- 글자 크기 -->
    <div class="setting-section">
      <label>글자 크기</label>
      <div class="radio-group">
        <label><input type="radio" name="fontSize" value="1"> 1</label>
        <label><input type="radio" name="fontSize" value="2"> 2</label>
        <label><input type="radio" name="fontSize" value="3"> 3</label>
        <label><input type="radio" name="fontSize" value="4"> 4</label>
        <label><input type="radio" name="fontSize" value="5"> 5</label>
      </div>
    </div>

    <!-- 버튼 크기 -->
    <div class="setting-section">
      <label>버튼 크기:</label>
      <div class="radio-group">
        <label><input type="radio" name="buttonSize" value="1"> 1</label>
        <label><input type="radio" name="buttonSize" value="2"> 2</label>
        <label><input type="radio" name="buttonSize" value="3"> 3</label>
        <label><input type="radio" name="buttonSize" value="4"> 4</label>
        <label><input type="radio" name="buttonSize" value="5"> 5</label>
      </div>
    </div>

    <!-- 글자 정렬 -->
    <div class="setting-section">
      <label>글자 정렬:</label>
      <div class="radio-group">
        <label><input type="radio" name="align" value="left"> 왼쪽</label>
        <label><input type="radio" name="align" value="center"> 가운데</label>
        <label><input type="radio" name="align" value="right"> 오른쪽</label>
      </div>
    </div>

    <div style="margin-top: 20px;">
      <button onclick="saveSettings()">저장</button>
      <button onclick="window.location.href='/'">홈으로</button>
    </div>
  </div>

  <script>
    window.onload = function () {
      const theme = localStorage.getItem('theme') || 'light';
      const columnCount = localStorage.getItem('columnCount') || '3';
      const fontSize = localStorage.getItem('fontSize') || '2';
      const align = localStorage.getItem('textAlign') || 'center';
      const buttonSize = localStorage.getItem('buttonSize') || '3';

      localStorage.setItem('theme', theme);
      localStorage.setItem('columnCount', columnCount);
      localStorage.setItem('fontSize', fontSize);
      localStorage.setItem('textAlign', align);
      localStorage.setItem('buttonSize', buttonSize);

      document.querySelector(`input[name="theme"][value="${theme}"]`).checked = true;
      document.querySelector(`input[name="columnCount"][value="${columnCount}"]`).checked = true;
      document.querySelector(`input[name="fontSize"][value="${fontSize}"]`).checked = true;
      document.querySelector(`input[name="align"][value="${align}"]`).checked = true;
      document.querySelector(`input[name="buttonSize"][value="${buttonSize}"]`).checked = true;
    }

    function saveSettings() {
      const theme = document.querySelector('input[name="theme"]:checked')?.value;
      const columnCount = document.querySelector('input[name="columnCount"]:checked')?.value;
      const fontSize = document.querySelector('input[name="fontSize"]:checked')?.value;
      const align = document.querySelector('input[name="align"]:checked')?.value;
      const buttonSize = document.querySelector('input[name="buttonSize"]:checked')?.value;

      if (theme) localStorage.setItem('theme', theme);
      if (columnCount) localStorage.setItem('columnCount', columnCount);
      if (fontSize) localStorage.setItem('fontSize', fontSize);
      if (align) localStorage.setItem('textAlign', align);
      if (buttonSize) localStorage.setItem('buttonSize', buttonSize);

      alert('설정이 저장되었습니다.');
    }
  </script>
</body>
</html>